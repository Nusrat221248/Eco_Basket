<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:text="Create an account"
        android:textAllCaps="true"
        android:textColor="#5B1111"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="App logo"
        android:src="@drawable/basket_sharp_svgrepo_com"
        android:tint="#5B1111"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/mail_svgrepo_com"
        android:drawablePadding="20dp"
        android:ems="15"
        android:hint="Enter your email"
        android:inputType="text"
        android:padding="20dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        android:drawablePadding="20dp"
        android:ems="15"
        android:hint="Enter your name"
        android:inputType="text"
        android:padding="20dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/password_minimalistic_svgrepo_com"
        android:drawablePadding="20dp"
        android:ems="15"
        android:hint="Create your password"
        android:inputType="textPassword"
        android:padding="20dp" />

    <Button
        android:id="@+id/Enter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#5B1111"
        android:gravity="center"
        android:text="Create an account"
        android:textColor="#B19B9B" />

    <TextView
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:text="Already have an account?"
        android:textColor="#6B6565"
        android:textSize="12sp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1sp"
        android:background="@android:color/transparent"
        android:text="Login"
        android:textColor="@color/purple_700"
        android:textSize="10sp" />

    <!-- Social Media Icons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/facebook_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="60dp"
            android:contentDescription="Facebook logo"
            android:src="@drawable/facebook_svgrepo_com"
            android:tint="#090909"
            android:layout_marginEnd="5dp"/>

        <ImageView
            android:id="@+id/twitter_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Twitter logo"
            android:src="@drawable/twitter_round_svgrepo_com"
            android:layout_marginEnd="1dp"/>

        <ImageView
            android:id="@+id/instagram_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="60dp"
            android:contentDescription="Instagram logo"
            android:src="@drawable/instagram_167_svgrepo_com"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>
</LinearLayout>